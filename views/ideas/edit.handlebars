<div class="card card-body mt-2">
    <h3>想学课程</h3>
    <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
    {{!-- method-override 更改提交方式为 PUT  --}}
        <input type="hidden" name="_method" value="PUT">
        <div  class="form-group">
            <label for="exampleInputEmail1">标题</label>
            <input type="text" class="form-control"  name="title" value="{{idea.title}}" >
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">详情</label>
            <textarea row="4" class="form-control" name="details" value="details" >{{idea.details}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">提交</button>
    </form>
</div>